               <Image url="@images/background.jpg" />
            </image>
         </ImageView>
         <VBox prefHeight="290.0" prefWidth="340.0">
            <children>
               <Label fx:id="name" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="357.0" text="Name">
