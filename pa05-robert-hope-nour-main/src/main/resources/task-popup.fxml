         <ImageView accessibleRole="BUTTON" blendMode="RED" fitHeight="300.0" fitWidth="175.0" layoutX="168.0" layoutY="-1.0" mouseTransparent="true" opacity="0.41" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@images/background.jpg" />
            </image>
